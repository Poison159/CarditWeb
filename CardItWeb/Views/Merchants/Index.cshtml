@model IEnumerable<CardItWebApp.Models.Merchant>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <img class="card-img-top" style="width:22rem; height: 13rem" src=@item.ImagePath alt="Card image cap">
                <div class="card-body">
                    <h5 style="color:white" class="card-title">@item.Name</h5>
                    <a href=@item.Website class="card-text">Website |</a>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </div>
            </div>
        </div>
    }
</div>


